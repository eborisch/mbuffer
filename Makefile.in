CC		= @CC@
DEFS		= @DEFS@ -DPREFIX=\"${prefix}\"
CFLAGS		= @CFLAGS@ $(DEFS) -I@srcdir@ -I.
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
EXE		= @EXEEXT@
SHELL		= /bin/sh
CP		= @CP@

VPATH		= @srcdir@
prefix		= @prefix@
exec_prefix     = @exec_prefix@
datarootdir	= @datarootdir@
bindir          = @bindir@
mandir		= @mandir@/man1
etcdir		= @sysconfdir@

RM		= @RM@
INSTALL		= @INSTALL@

TARGET		= mbuffer$(EXE)
SOURCES		= log.c network.c mbuffer.c hashing.c input.c common.c settings.c globals.c
OBJECTS		= $(SOURCES:.c=.o)

TESTTREE	= .

.PHONY: clean all distclean install check testcleanup

all: $(TARGET)

$(OBJECTS): config.h Makefile

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJECTS) $(LIBS) -o $@

clean:
	-$(RM) $(OBJECTS)

distclean: clean
	-$(RM) $(TARGET) config.h config.log \
	config.status Makefile mbuffer.1 core

$(DESTDIR)$(prefix)/etc:
	-$(INSTALL) -d -m 755 $@

$(DESTDIR)$(prefix)/etc/mbuffer.rc:
	$(INSTALL) -m 644 mbuffer.rc $(DESTDIR)$(etcdir)

install: $(TARGET) $(DESTDIR)$(etcdir) $(DESTDIR)$(etcdir)/mbuffer.rc
	-$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(bindir)/
	-$(INSTALL) -d -m 755 $(DESTDIR)$(mandir)
	$(INSTALL) -m 644 mbuffer.1 $(DESTDIR)$(mandir)/

lint:
	lint $(DEFS) $(SOURCES)

check: $(TARGET) test0 test1 test2 test3 test4 test5

testcleanup:
	rm -f test0 test1 test2 test3 test4 test5 \
		test0.md5 test1.md5 test2.md5 test3.md5 test4.md5 test5.md5 \
		test.tar test.md5 tapetest.so

test.tar:
	tar cf test.tar $(TESTTREE)

test.md5: test.tar
	openssl md5 < test.tar > test.md5

test0: test.md5
	./mbuffer -i test.tar -p10 | ./mbuffer -q -P 90 | openssl md5 > test0.md5
	sync
	diff test0.md5 test.md5
	touch test0

test1: test.md5
	./mbuffer -i test.tar -f -o $@.tar -o /dev/null -H
	openssl md5 < $@.tar > $@.md5
	rm -f $@.tar
	sync
	diff $@.md5 test.md5
	touch $@

test2: test.md5
	./mbuffer -q -I :8000 -o $@.tar -o - | openssl md5 > $@.md5 & \
		sleep 1; \
		rm -f $@.tar; \
		./mbuffer -i test.tar -o /dev/null -O localhost:8000 -H; \
		wait
	sync
	diff $@.md5 test.md5
	rm $@.md5
	openssl md5 < $@.tar > $@.md5 
	rm -f $@.tar
	sync
	diff $@.md5 test.md5
	touch $@

test3: test.md5
	./mbuffer -q -6 -I :8000 | openssl md5 > $@.md5 & \
		sleep 1; \
		rm -f $@.tar; \
		./mbuffer -i test.tar -o /dev/null -6 -O ip6-localhost:8000 -o $@.tar -H; \
		wait
	sync
	diff $@.md5 test.md5
	rm $@.md5
	openssl md5 < $@.tar > $@.md5 
	rm -f $@.tar
	sync
	diff $@.md5 test.md5
	touch $@

# Multi-volume test
test4: test.md5 tapetest.so
	rm -f output-$@.tar.*
	cat test.tar | LD_PRELOAD=$(PWD)/tapetest.so ./mbuffer -f -o output-$@.tar -H -A "echo '[$@] Replacing tape'"
	cat output-$@.tar.* | openssl md5 > $@.md5
	rm -f output-$@.tar.*
	sync
	diff $@.md5 test.md5
	touch $@

# Multi-volume test with --tapeaware
test5: test.md5 tapetest.so
	rm -f output-$@.tar.*
	cat test.tar | LD_PRELOAD=$(PWD)/tapetest.so ./mbuffer -f -o output-$@.tar -H -A "echo '[$@] Replacing tape'" --tapeaware
	cat output-$@.tar.* | openssl md5 > $@.md5
	rm -f output-$@.tar.*
	sync
	diff $@.md5 test.md5
	touch $@

test6: mbuffer idev.so
	LD_PRELOAD=./idev.so BSIZE=317 IDEV=mbuffer ./mbuffer -s256 -i mbuffer -f -o mbuffer2

tapetest.so: tapetest.c
	$(CC) -shared -fPIC $< -o $@ -ldl

idev.so: idev.c
	$(CC) -shared -g -fPIC $< -o $@ -ldl
